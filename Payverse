  <script>
    // Set year
    document.getElementById('year').textContent = new Date().getFullYear();

    // Small accessibility: keyboard focus on CTAs
    document.querySelectorAll('.btn-primary, .btn-ghost, nav a.cta').forEach(el=>{
      el.addEventListener('keydown', (e)=>{ if(e.key === 'Enter') el.click(); });
    });

    // Lightweight marquee-style auto-scroll for logos on wider screens
    (function autoScrollLogos(){
      const container = document.querySelector('.payments');
      if(!container || window.matchMedia('(max-width:900px)').matches) return;
      let pos = 0;
      setInterval(()=>{
        pos = (pos + 1) % (container.scrollWidth - container.clientWidth + 1);
        container.scrollTo({left: pos, behavior:'smooth'});
      }, 2200);
    })();

    // If user is on dashboard demo pages, keep nav link as active (simple)
    if(location.pathname.endsWith('dashboard.html')){
      const a = document.querySelector('nav a.cta');
      if(a) a.textContent = 'Dashboard';
    }
  </script>
